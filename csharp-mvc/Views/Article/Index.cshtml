@{
  ViewData["Title"] = "Article Registration";
}

<h1>Article Registration</h1>

@if (ViewBag.RegistrationSuccess != null && ViewBag.RegistrationSuccess == true)
{
  <p style="color: green;">Article registered successfully!</p>
}

<form asp-controller="Article" asp-action="RegisterArticle" method="post">
  <div>
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="Name" required />
  </div>
  <div>
    <label for="Amount">Amount:</label>
    <input type="number" id="Amount" name="Amount" required />
  </div>
  <div>
    <label for="ExpirationDate">Expiration Date:</label>
    <input type="date" id="ExpirationDate" name="ExpirationDate" required />
  </div>
  <div>
    <label for="Price">Price:</label>
    <input type="number" step="0.01" id="Price" name="Price" required />
  </div>
  <div>
    <label for="Type">Type:</label>
    <select id="Type" name="Type" required>
      <option value="Ushqimore">Ushqimore</option>
      <option value="Bulmet">Bulmet</option>
      <option value="Pije">Pije</option>
      <option value="Embelsire">Embelsire</option>
    </select>
  </div>
  <div>
    <label for="Tax">Tax:</label>
    <input type="checkbox" id="Tax" name="Tax" />
  </div>
  <div>
    <label for="Barcode">Barcode/Code:</label>
    <input type="text" id="Barcode" name="Barcode" />
  </div>
  <button type="submit">Register Article</button>
</form>
